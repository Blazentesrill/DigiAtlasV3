        android:text="Digital Monster Ver.1"
        android:padding="14dp"
        android:textAllCaps="true"
        app:icon="@drawable/egg_dm_ver1"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconSize="32dp"
        app:iconTint="@null" />

