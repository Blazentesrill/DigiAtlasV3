<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”· Background image (NO STRETCH) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_device_select"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

    <!-- Optional dark overlay for readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>

    <!-- Foreground content -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Select a Device"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dm20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digital Monster 20th"
            android:textSize="18sp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dmx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digital Monster X"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>
